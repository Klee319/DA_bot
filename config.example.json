    },
    "database": {
        "path": "data/items.db",
        "backup_dir": "backups",
        "max_backups": 5
    },
    "logging": {
        "level": "INFO",
        "file": "logs/bot.log",
        "max_size": 10485760,
        "backup_count": 5
    }
