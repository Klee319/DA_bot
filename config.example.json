{
    "bot": {
        "token": "YOUR_DISCORD_BOT_TOKEN_HERE",
        "prefix": "!",
        "owner_id": "YOUR_DISCORD_USER_ID_HERE"
    },
    "features": {
        "auto_backup": true,
        "backup_interval": 3600,
        "max_search_results": 20,
        "pagination_size": 10,
